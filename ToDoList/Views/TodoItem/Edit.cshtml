@model Item

<form action="/TodoItem/Edit" method="post">
    <input type="hidden" value="@Model.Id" name="Id">
    <div class="mb-3">
        <label  class="form-label">Name</label>
        <input type="text" name="Title" class="form-control"  value="@Model.Title">
    </div>
    <div class="mb-2">
        <label  class="form-label">Description</label>
        <input type="text" name="Description" class="form-control" value="@Model.Description" >
    </div>
    <div class="mb-3">
        <label  class="form-label">Deadline</label>
        <input type="text" name="Deadlline" class="form-control" value="@Model.Deadlline">
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>