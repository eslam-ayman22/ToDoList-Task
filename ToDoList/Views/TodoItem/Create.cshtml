<form action="/TodoItem/SaveName" method="post">
    <h1>Create New TO-Do Item</h1>
    <div class="form-group">
        <label for="username">Your Name:</label>
        <input type="text" id="username" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter Your Name">
        <small id="emailHelp" class="form-text text-muted">store it in a cookie (1 day).</small>
        <br>
        <br>
        <button type="submit" class="btn btn-outline-secondary">Create</button>
    </div>
</form>